<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="@dimen/mp_16"
            android:orientation="vertical"
            android:padding="@dimen/mp_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userImage"
                android:src="@drawable/chief"
                android:layout_width="@dimen/mp_44"
                android:layout_height="@dimen/mp_44"/>
            <TextView
                android:id="@+id/hello"
                android:layout_below="@id/userImage"
                android:text="Hello"
                style="@style/MyText"
                android:textColor="@color/black"
                android:textSize="@dimen/mp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/userName"
                android:layout_below="@id/hello"
                android:text="Nguyen Khac Lam!"
                style="@style/MyText"
                android:textColor="@color/black"
                android:textSize="@dimen/mp_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_waving_hand"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/mp_20"
                android:layout_toEndOf="@id/userName"
                android:layout_width="@dimen/mp_40"
                android:layout_height="@dimen/mp_40"/>
        </RelativeLayout>

        <include layout="@layout/inc_recomend"/>
        <include layout="@layout/inc_category"/>
        <include layout="@layout/inc_new_recipe"/>

    </LinearLayout>

</ScrollView>