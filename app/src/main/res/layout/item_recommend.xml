<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_marginEnd="@dimen/mp_16"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/mp_16"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/recommendImg"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:src="@drawable/food"
                android:tint="#8C000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/tvRecommendName"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/mp_8"
                style="@style/MyText"
                android:textSize="14sp"
                android:text="Food name"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginStart="@dimen/mp_8"
                android:layout_marginTop="@dimen/mp_8"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_baseline_star_24"
                    android:layout_width="@dimen/mp_24"
                    android:layout_height="@dimen/mp_24"
                    app:tint="@color/yellow" />
                <TextView
                    android:id="@+id/tvRecommendRating"
                    style="@style/MyText"
                    android:textSize="14sp"
                    android:text="4.8"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>